@model IEnumerable<MediaCollection.Database.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Album Index</h1>

@if (User.Identity.Name != null)
{
    <p>
        <a class="btn btn-info" role="button" asp-action="Create">Add New Album</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumArtist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AlbumID">Details </a>
                    @if (User.Identity.Name != null)
                    {
                        <a asp-action="Edit" asp-route-id="@item.AlbumID"> | Edit </a>
                        <a asp-action="Delete" asp-route-id="@item.AlbumID"> | Delete </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
