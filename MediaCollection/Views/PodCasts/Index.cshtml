@model IEnumerable<MediaCollection.Database.Podcast>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Poster)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.PodcastID">Details |</a>
                @if (User.Identity.Name != null)
                {
                    <a asp-action="Edit" asp-route-id="@item.PodcastID">Edit |</a>
                    <a asp-action="Delete" asp-route-id="@item.PodcastID">Delete </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
